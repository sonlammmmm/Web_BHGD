@page
@model LogoutModel
@{
    ViewData["Title"] = "Đăng xuất";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4 text-center">
                    <h2 class="mb-4 fw-bold">Đăng xuất</h2>
                    @{
                        if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                <p class="mb-3">Bạn có chắc chắn muốn đăng xuất?</p>
                                <button type="submit" class="btn btn-danger w-100 rounded-pill py-2">Xác nhận đăng xuất</button>
                            </form>
                        }
                        else
                        {
                            <p class="text-success">Bạn đã đăng xuất thành công.</p>
                            <a asp-page="/Account/Login" class="btn btn-primary rounded-pill mt-3">Quay lại trang đăng nhập</a>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
}