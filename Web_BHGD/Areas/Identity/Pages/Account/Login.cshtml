@page
@model LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4 fw-bold">Chào mừng bạn trở lại</h2>
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert" style="display: none;"></div>
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">Địa chỉ email</label>
                            <input asp-for="Input.Email" class="form-control rounded-pill" autocomplete="username" aria-required="true" placeholder="Nhập email của bạn" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label">Mật khẩu</label>
                            <input asp-for="Input.Password" class="form-control rounded-pill" autocomplete="current-password" aria-required="true" placeholder="Nhập mật khẩu" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-check">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label asp-for="Input.RememberMe" class="form-check-label">Ghi nhớ đăng nhập</label>
                        </div>
                        <button id="login-submit" type="submit" class="btn btn-primary w-100 rounded-pill py-2">Đăng nhập</button>
                    </form>
                    <div class="text-center mt-3">
                        <p><a id="forgot-password" asp-page="./ForgotPassword" class="text-primary">Quên mật khẩu?</a></p>
                        <p>Chưa có tài khoản? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary">Đăng ký ngay</a></p>
                        <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-primary">Gửi lại email xác nhận</a></p>
                    </div>
                    @if (Model.ExternalLogins?.Count > 0)
                    {
                        <div class="text-center mt-4">
                            <hr class="my-4">
                            <h5>Hoặc đăng nhập bằng</h5>
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div class="d-flex justify-content-center gap-2">
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <button type="submit" class="btn btn-outline-secondary rounded-pill" name="provider" value="@provider.Name" title="Đăng nhập bằng @provider.DisplayName">@provider.DisplayName</button>
                                    }
                                </div>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
}