@using Web_BHGD.Models
@inject SignInManager<ApplicationUser> SignInManager
@{
    var activePage = ViewData["ActivePage"] as string;
    var hasExternalLogins = SignInManager.GetExternalAuthenticationSchemesAsync().Result.Any();
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white">
        <h6 class="card-title mb-0">
            <i class="bi bi-person-gear me-2"></i>Quản lý tài khoản
        </h6>
    </div>
    <div class="card-body p-0">
        <div class="list-group list-group-flush">
            <a class="list-group-item list-group-item-action d-flex align-items-center @(ManageNavPages.IndexNavClass(ViewContext) == "active" ? "active" : "")" 
               id="profile" asp-page="./Index">
                <i class="bi bi-person-circle me-3 text-primary"></i>
                <div>
                    <div class="fw-semibold">Hồ sơ cá nhân</div>
                    <small class="text-muted">Thông tin cá nhân và cài đặt</small>
                </div>
            </a>
            
            <a class="list-group-item list-group-item-action d-flex align-items-center @(ManageNavPages.EmailNavClass(ViewContext) == "active" ? "active" : "")" 
               id="email" asp-page="./Email">
                <i class="bi bi-envelope me-3 text-success"></i>
                <div>
                    <div class="fw-semibold">Email</div>
                    <small class="text-muted">Quản lý địa chỉ email</small>
                </div>
            </a>
            
            <a class="list-group-item list-group-item-action d-flex align-items-center @(ManageNavPages.ChangePasswordNavClass(ViewContext) == "active" ? "active" : "")" 
               id="change-password" asp-page="./ChangePassword">
                <i class="bi bi-key me-3 text-warning"></i>
                <div>
                    <div class="fw-semibold">Mật khẩu</div>
                    <small class="text-muted">Đổi mật khẩu đăng nhập</small>
                </div>
            </a>
            
            @if (hasExternalLogins)
            {
                <a class="list-group-item list-group-item-action d-flex align-items-center @(ManageNavPages.ExternalLoginsNavClass(ViewContext) == "active" ? "active" : "")" 
                   id="external-login" asp-page="./ExternalLogins">
                    <i class="bi bi-share me-3 text-info"></i>
                    <div>
                        <div class="fw-semibold">Đăng nhập bên ngoài</div>
                        <small class="text-muted">Liên kết tài khoản mạng xã hội</small>
                    </div>
                </a>
            }
            
            <a class="list-group-item list-group-item-action d-flex align-items-center @(ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext) == "active" ? "active" : "")" 
               id="two-factor" asp-page="./TwoFactorAuthentication">
                <i class="bi bi-shield-check me-3 text-danger"></i>
                <div>
                    <div class="fw-semibold">Xác thực 2 lớp</div>
                    <small class="text-muted">Bảo mật nâng cao</small>
                </div>
            </a>
            
            <a class="list-group-item list-group-item-action d-flex align-items-center @(ManageNavPages.PersonalDataNavClass(ViewContext) == "active" ? "active" : "")" 
               id="personal-data" asp-page="./PersonalData">
                <i class="bi bi-file-person me-3 text-secondary"></i>
                <div>
                    <div class="fw-semibold">Dữ liệu cá nhân</div>
                    <small class="text-muted">Tải xuống và xóa dữ liệu</small>
                </div>
            </a>
            
            <a class="list-group-item list-group-item-action d-flex align-items-center @(ManageNavPages.OrderHistoryNavClass(ViewContext) == "active" ? "active" : "")" 
               id="order-history" asp-page="/Account/Manage/OrderHistory">
                <i class="bi bi-cart-check me-3 text-success"></i>
                <div>
                    <div class="fw-semibold">Lịch sử mua hàng</div>
                    <small class="text-muted">Xem đơn hàng đã mua</small>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    .list-group-item {
        border-left: 4px solid transparent;
        transition: all 0.3s ease;
        padding: 1rem 1.25rem;
    }
    
    .list-group-item:hover {
        background-color: #f8f9fa;
        border-left-color: #0d6efd;
        transform: translateX(2px);
    }
    
    .list-group-item.active {
        background-color: #e7f3ff;
        border-left-color: #0d6efd;
        color: #0d6efd;
    }
    
    .list-group-item.active i {
        color: #0d6efd !important;
    }
    
    .card {
        border-radius: 12px;
        overflow: hidden;
    }
    
    .card-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        padding: 1rem 1.25rem;
    }
    
    @@media (max-width: 768px) {
        .list-group-item {
            padding: 0.75rem 1rem;
        }
        
        .list-group-item small {
            display: none;
        }
    }
</style>