@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Thay đổi mật khẩu";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="container-fluid profile-container manage-page">
    <div class="row">
        <div class="col-lg-9">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light py-3">
                    <h3 class="mb-0 keep-title">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <partial name="_StatusMessage" for="StatusMessage" />
                    <form id="change-password-form" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-6 mb-3" role="alert"></div>
                        <div class="mb-3">
                            <label asp-for="Input.OldPassword" class="form-label">Mật khẩu hiện tại <span class="text-danger">*</span></label>
                            <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" placeholder="Nhập mật khẩu hiện tại" />
                            <span asp-validation-for="Input.OldPassword" class="text-danger small mt-1 d-block"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.NewPassword" class="form-label">Mật khẩu mới <span class="text-danger">*</span></label>
                            <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" placeholder="Nhập mật khẩu mới" />
                            <span asp-validation-for="Input.NewPassword" class="text-danger small mt-1 d-block"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label">Xác nhận mật khẩu <span class="text-danger">*</span></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Nhập lại mật khẩu mới" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small mt-1 d-block"></span>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary btn-sm">
                                <i class="bi bi-save me-1"></i>Thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}