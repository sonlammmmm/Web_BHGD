@page
@model IndexModel
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
    ViewData["ActivePage"] = "Index";
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-light py-3">
        <h4 class="mb-0">@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <partial name="_StatusMessage" for="StatusMessage" />

        <div class="row">
            <div class="col-lg-8">
                <form id="profile-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-4">
                        <label asp-for="Username" class="form-label text-muted">Tên đăng nhập</label>
                        <input asp-for="Username" class="form-control p-3" disabled />
                    </div>

                    <div class="mb-4">
                        <label asp-for="Input.PhoneNumber" class="form-label text-muted">Số điện thoại</label>
                        <input asp-for="Input.PhoneNumber" class="form-control p-3"
                               placeholder="Nhập số điện thoại của bạn" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <button id="update-profile-button" type="submit"
                            class="btn btn-primary w-100 py-2 fw-medium">
                        <i class="bi bi-save me-2"></i>Lưu thay đổi
                    </button>
                </form>
            </div>
            <div class="col-lg-4 mt-4 mt-lg-0">
                <div class="bg-light p-4 rounded">
                    <h5 class="fw-medium mb-3">Bảo mật tài khoản</h5>
                    <p class="text-muted mb-4">
                        <i class="bi bi-info-circle me-2 text-primary"></i>
                        Cập nhật thông tin liên hệ giúp chúng tôi hỗ trợ bạn tốt hơn
                    </p>
                    <div class="d-grid gap-2">
                        <a asp-page="./ChangePassword" class="btn btn-outline-secondary">
                            <i class="bi bi-shield-lock me-2"></i>Thay đổi mật khẩu
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}