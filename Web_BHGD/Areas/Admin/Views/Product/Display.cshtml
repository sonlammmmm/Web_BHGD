@model Web_BHGD.Models.Product
@{
    ViewData["Title"] = "Chi tiết Sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container-fluid">
    <div class="row">
        <!-- Main Content -->
        <div class="col-md-9 col-lg-10">
            <div class="p-4">
                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                                <i class="fas fa-home me-1"></i>Dashboard
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-controller="Product" asp-action="Index" class="text-decoration-none">
                                Sản phẩm
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Chi tiết</li>
                    </ol>
                </nav>

                <!-- Header -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h1 class="h3 mb-0">
                            <i class="fas fa-box me-2 text-primary"></i>
                            Chi tiết Sản phẩm
                        </h1>
                        <p class="text-muted mb-0">Thông tin chi tiết về sản phẩm "#@Model.Id - @Model.Name"</p>
                    </div>
                </div>

                <!-- Product Card -->
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6">
                        <div class="card shadow-sm">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0">
                                    <i class="fas fa-box me-2"></i>
                                    Thông tin Sản phẩm
                                </h5>
                            </div>
                            <div class="card-body p-4">
                                <div class="text-center mb-4">
                                    <img src="@Model.ImageUrl" alt="Product Image" style="max-width: 300px; height: auto;" class="mb-3" />
                                </div>
                                <div class="bg-light rounded p-3 mb-4">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <small class="text-muted">ID:</small>
                                            <p class="mb-2 fw-bold">#@Model.Id</p>
                                        </div>
                                        <div class="col-md-6">
                                            <small class="text-muted">Tên sản phẩm:</small>
                                            <p class="mb-2 fw-bold">@Model.Name</p>
                                        </div>
                                        <div class="col-md-6">
                                            <small class="text-muted">Giá:</small>
                                            <p class="mb-2 fw-bold">@Model.Price.ToString("C")</p>
                                        </div>
                                        <div class="col-md-6">
                                            <small class="text-muted">Danh mục:</small>
                                            <p class="mb-2 fw-bold">@ViewBag.CategoryName</p>
                                        </div>
                                        <div class="col-12">
                                            <small class="text-muted">Mô tả:</small>
                                            <p class="mb-2">@Model.Description</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                        <i class="fas fa-arrow-left me-1"></i>
                                        Quay lại
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .nav-link {
        transition: all 0.3s ease;
        border-radius: 0.25rem;
        margin-bottom: 0.25rem;
    }

        .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.1);
            color: white !important;
        }

        .nav-link.active {
            background-color: rgba(255, 255, 255, 0.2);
            color: white !important;
        }

    .card {
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        transition: all 0.3s ease;
    }

    .bg-dark {
        background-color: #2c3e50 !important;
    }

    .breadcrumb-item + .breadcrumb-item::before {
        content: "›";
        font-weight: bold;
    }
</style>