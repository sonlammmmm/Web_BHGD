@model Product
@{
    ViewData["Title"] = "Cập nhật sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-header">
    <h2 class="admin-title"><i class="fas fa-edit"></i> @ViewData["Title"]</h2>
</div>

<div class="compact-form">
    <form asp-action="Update" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="form-section">
            <div class="form-group">
                <label asp-for="Name">Tên sản phẩm *</label>
                <input asp-for="Name" class="form-control" placeholder="Vui lòng nhập tên sản phẩm">
                <span asp-validation-for="Name" class="form-error"></span>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="CategoryId">Danh mục *</label>
                    <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
                        <option value="">-- Chọn danh mục --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="form-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price">Giá (VNĐ) *</label>
                    <input asp-for="Price" type="number" class="form-control" placeholder="0" min="0" max="1000000000" value="@Model.Price">
                    <span asp-validation-for="Price" class="form-error"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Stock">Số lượng *</label>
                    <input asp-for="Stock" type="number" class="form-control" min="0" value="@Model.Stock">
                    <div class="form-hint">
                        Hiện tại: @ViewBag.CurrentStock | Đã bán: @ViewBag.SoldQuantity
                    </div>
                    <span asp-validation-for="Stock" class="form-error"></span>
                </div>

                <div class="form-group">
                    <label>Ảnh sản phẩm</label>
                    <div class="image-upload-preview">
                        <img id="previewImage" src="@Model.ImageUrl">
                        <label for="imageInput" class="upload-btn">
                            <i class="fas fa-cloud-upload-alt"></i> Đổi ảnh
                        </label>
                        <input type="file" name="imageUrl" id="imageInput" accept="image/*">
                    </div>
                    <div class="form-hint">
                        Để trống nếu muốn giữ ảnh hiện tại
                    </div>
                </div>
            </div>
        </div>

        <div class="form-section">
            <div class="form-group">
                <label asp-for="Description">Mô tả sản phẩm</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả chi tiết sản phẩm...">@Model.Description</textarea>
            </div>
        </div>

        <div class="form-footer">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times"></i> Hủy bỏ
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Cập nhật
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.getElementById('imageInput').addEventListener('change', function (event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('previewImage').src = e.target.result;
                }
                reader.readAsDataURL(file);
            } else {
                document.getElementById('previewImage').src = "@Model.ImageUrl";
            }
        });
    </script>
}