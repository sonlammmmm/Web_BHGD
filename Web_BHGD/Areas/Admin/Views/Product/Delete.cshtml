@model Product
@{
    ViewData["Title"] = "Xóa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-header">
    <h2 class="admin-title"><i class="fas fa-trash-alt"></i> @ViewData["Title"]</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Quay lại
    </a>
</div>

<div class="delete-card">
    <div class="delete-header">
        <h3>Xác nhận xóa sản phẩm</h3>
        <div class="product-id">ID: @Model.Id</div>
    </div>

    <div class="delete-content">
        <div class="delete-image">
            <img src="@Model.ImageUrl" alt="@Model.Name">
        </div>

        <div class="delete-info">
            <h4>@Model.Name</h4>

            <div class="info-row">
                <div class="info-label">Danh mục:</div>
                <div class="info-value">@(Model.Category?.Name ?? "N/A")</div>
            </div>

            <div class="info-row">
                <div class="info-label">Giá:</div>
                <div class="info-value price">@Model.Price.ToString("N0") đ</div>
            </div>

            <div class="info-row">
                <div class="info-label">Tồn kho:</div>
                <div class="info-value">
                    <span class="stock-badge @(Model.Stock == 0 ? "stock-out" : "stock-low")">
                        @Model.Stock
                    </span>
                </div>
            </div>

            @if (ViewBag.StockWarning != null)
            {
                <div class="delete-warning">
                    <i class="fas fa-exclamation-triangle"></i> @ViewBag.StockWarning
                </div>
            }

            <div class="delete-alert">
                <i class="fas fa-exclamation-circle"></i>
                <strong>Bạn có chắc chắn muốn xóa sản phẩm này?</strong>
                Thao tác này không thể hoàn tác và sẽ xóa vĩnh viễn sản phẩm khỏi hệ thống.
            </div>
        </div>
    </div>

    <div class="delete-footer">
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger btn-confirm">
                <i class="fas fa-trash-alt"></i> Xác nhận xóa
            </button>
        </form>
    </div>
</div>