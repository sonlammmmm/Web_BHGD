@model IEnumerable<Web_BHGD.Models.Category>
@{
    ViewData["Title"] = "Quản lý Danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 px-0">
            <div class="bg-dark min-vh-100">
                <div class="p-3">
                    <h5 class="text-white mb-4">
                        <i class="fas fa-user-shield me-2"></i>
                        Admin Panel
                    </h5>

                    <nav class="nav flex-column">
                        <a class="nav-link text-white-50" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-tachometer-alt me-2"></i>
                            Dashboard
                        </a>

                        <hr class="text-white-50">

                        <h6 class="text-white-50 text-uppercase small mb-3">Quản lý</h6>

                        <a class="nav-link text-white-50" asp-controller="Product" asp-action="Index">
                            <i class="fas fa-box me-2"></i>
                            Sản phẩm
                        </a>

                        <a class="nav-link text-white-50 active" asp-controller="Categories" asp-action="Index">
                            <i class="fas fa-tags me-2"></i>
                            Danh mục
                            <span class="badge bg-primary ms-auto">Hiện tại</span>
                        </a>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9 col-lg-10">
            <div class="p-4">
                <!-- Header -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h1 class="h3 mb-0">
                            <i class="fas fa-tags me-2 text-primary"></i>
                            Quản lý Danh mục
                        </h1>
                        <p class="text-muted mb-0">Quản lý tất cả danh mục sản phẩm</p>
                    </div>
                    <div>
                        <a asp-action="Add" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>
                            Thêm Danh mục
                        </a>
                    </div>
                </div>

                <!-- Statistics Cards -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="card bg-gradient-primary text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h6 class="card-title">Tổng Danh mục</h6>
                                        <h4 class="mb-0">@Model.Count()</h4>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-tags fa-2x opacity-75"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Categories Table -->
                <div class="card shadow-sm">
                    <div class="card-header bg-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="fas fa-list me-2"></i>
                                Danh sách Danh mục
                            </h5>
                            <div class="d-flex gap-2">
                                <input type="text" id="searchInput" class="form-control form-control-sm"
                                       placeholder="Tìm kiếm danh mục..." style="width: 200px;">
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="border-0 px-4">
                                            <i class="fas fa-hashtag me-1"></i>
                                            ID
                                        </th>
                                        <th class="border-0">
                                            <i class="fas fa-tag me-1"></i>
                                            Tên Danh mục
                                        </th>
                                        <th class="border-0 text-center">
                                            <i class="fas fa-tools me-1"></i>
                                            Thao tác
                                        </th>
                                    </tr>
                                </thead>
                                <tbody id="categoryTable">
                                    @if (Model.Any())
                                    {
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td class="px-4 align-middle">
                                                    <span class="badge bg-light text-dark">#@item.Id</span>
                                                </td>
                                                <td class="align-middle">
                                                    <div class="d-flex align-items-center">
                                                        <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-2"
                                                             style="width: 35px; height: 35px;">
                                                            <i class="fas fa-tag text-white small"></i>
                                                        </div>
                                                        <div>
                                                            <strong>@item.Name</strong>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="align-middle text-center">
                                                    <div class="btn-group" role="group">
                                                        <a asp-action="Display" asp-route-id="@item.Id"
                                                           class="btn btn-sm btn-outline-info"
                                                           data-bs-toggle="tooltip" title="Xem chi tiết">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        <a asp-action="Update" asp-route-id="@item.Id"
                                                           class="btn btn-sm btn-outline-warning"
                                                           data-bs-toggle="tooltip" title="Chỉnh sửa">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                                           class="btn btn-sm btn-outline-danger"
                                                           data-bs-toggle="tooltip" title="Xóa">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4" class="text-center py-5 text-muted">
                                                <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
                                                <h5>Chưa có danh mục nào</h5>
                                                <p>Hãy thêm danh mục đầu tiên của bạn</p>
                                                <a asp-action="Add" class="btn btn-primary">
                                                    <i class="fas fa-plus me-1"></i>
                                                    Thêm Danh mục Đầu tiên
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .nav-link {
        transition: all 0.3s ease;
        border-radius: 0.25rem;
        margin-bottom: 0.25rem;
    }

    .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
        color: white !important;
    }

    .nav-link.active {
        background-color: rgba(255, 255, 255, 0.2);
        color: white !important;
    }

    .bg-gradient-primary {
        background: linear-gradient(45deg, #007bff, #0056b3);
    }

    .card {
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .table th {
        font-weight: 600;
        color: #495057;
    }

    .btn-group .btn {
        border-radius: 0.25rem !important;
        margin: 0 2px;
    }

    .bg-dark {
        background-color: #2c3e50 !important;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });

        // Search functionality
        document.getElementById('searchInput').addEventListener('keyup', function() {
            var searchValue = this.value.toLowerCase();
            var rows = document.querySelectorAll('#categoryTable tr');

            rows.forEach(function(row) {
                var name = row.cells[1] ? row.cells[1].textContent.toLowerCase() : '';
                var description = row.cells[2] ? row.cells[2].textContent.toLowerCase() : '';

                if (name.includes(searchValue) || description.includes(searchValue)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    });
</script>