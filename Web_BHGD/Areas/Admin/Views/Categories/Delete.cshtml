@model Web_BHGD.Models.Category
@{
    ViewData["Title"] = "Xóa Danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container-fluid">
    <div class="row">
        <!-- Main Content -->
        <div class="col-md-9 col-lg-10">
            <div class="p-4">
                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                                <i class="fas fa-home me-1"></i>Dashboard
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-controller="Categories" asp-action="Index" class="text-decoration-none">
                                Danh mục
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Xóa</li>
                    </ol>
                </nav>

                <!-- Header -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h1 class="h3 mb-0">
                            <i class="fas fa-trash-alt me-2 text-danger"></i>
                            Xóa Danh mục
                        </h1>
                        <p class="text-muted mb-0">Xác nhận xóa danh mục khỏi hệ thống</p>
                    </div>
                </div>

                <!-- Validation Summary -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Không thể xóa!</strong>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <!-- Confirmation Card -->
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6">
                        <div class="card shadow-sm border-danger">
                            <div class="card-header bg-danger text-white">
                                <h5 class="mb-0">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    Xác nhận Xóa
                                </h5>
                            </div>
                            <div class="card-body p-4">
                                <div class="text-center mb-4">
                                    <div class="bg-danger bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                                         style="width: 80px; height: 80px;">
                                        <i class="fas fa-trash-alt fa-2x text-danger"></i>
                                    </div>
                                    <h4 class="text-danger mb-2">Bạn có chắc chắn muốn xóa?</h4>
                                    <p class="text-muted">Hành động này không thể hoàn tác!</p>
                                </div>

                                <!-- Category Info -->
                                <div class="bg-light rounded p-3 mb-4">
                                    <div class="row">
                                        <div class="col-4">
                                            <small class="text-muted">ID:</small>
                                            <p class="mb-0 fw-bold">#@Model.Id</p>
                                        </div>
                                        <div class="col-8">
                                            <small class="text-muted">Tên danh mục:</small>
                                            <p class="mb-0 fw-bold">@Model.Name</p>
                                        </div>
                                    </div>
                                </div>

                                <!-- Warning Message -->
                                <div class="alert alert-warning border-warning" role="alert">
                                    <div class="d-flex">
                                        <div class="flex-shrink-0">
                                            <i class="fas fa-exclamation-triangle text-warning"></i>
                                        </div>
                                        <div class="flex-grow-1 ms-2">
                                            <strong>Lưu ý quan trọng:</strong>
                                            <ul class="mb-0 mt-2">
                                                <li>Danh mục sẽ bị xóa vĩnh viễn khỏi hệ thống</li>
                                                <li>Không thể xóa nếu còn sản phẩm thuộc danh mục này</li>
                                                <li>Hành động này không thể hoàn tác</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>

                                <!-- Action Buttons -->
                                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-2">
                                        <i class="fas fa-arrow-left me-1"></i>
                                        Hủy bỏ
                                    </a>
                                    <form asp-action="DeleteConfirmed" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@Model.Id" />
                                        <button type="submit" class="btn btn-danger btn-lg" id="confirmDeleteBtn">
                                            <i class="fas fa-trash-alt me-1"></i>
                                            Xác nhận Xóa
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <!-- Safety Info -->
                        <div class="card mt-4 border-info">
                            <div class="card-body">
                                <h6 class="card-title text-info">
                                    <i class="fas fa-shield-alt me-1"></i>
                                    Bảo vệ Dữ liệu
                                </h6>
                                <p class="mb-0 small text-muted">
                                    Hệ thống sẽ kiểm tra và ngăn chặn việc xóa danh mục nếu vẫn còn sản phẩm liên quan.
                                    Điều này giúp bảo vệ tính toàn vẹn của dữ liệu.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .nav-link {
        transition: all 0.3s ease;
        border-radius: 0.25rem;
        margin-bottom: 0.25rem;
    }

    .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
        color: white !important;
    }

    .nav-link.active {
        background-color: rgba(255, 255, 255, 0.2);
        color: white !important;
    }

    .card {
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        transition: all 0.3s ease;
    }

    .bg-dark {
        background-color: #2c3e50 !important;
    }

    .breadcrumb-item + .breadcrumb-item::before {
        content: "›";
        font-weight: bold;
    }

    .btn-danger:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(220, 53, 69, 0.3);
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const confirmBtn = document.getElementById('confirmDeleteBtn');

        if (confirmBtn) {
            confirmBtn.addEventListener('click', function(e) {
                e.preventDefault();

                // Double confirmation for safety
                const confirmed = confirm('Bạn có thực sự chắc chắn muốn xóa danh mục này?\n\nHành động này không thể hoàn tác!');

                if (confirmed) {
                    // Add loading state
                    this.disabled = true;
                    this.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Đang xóa...';

                    // Submit form
                    this.closest('form').submit();
                } else {
                    this.disabled = false;
                }
            });
        }
    });
</script>