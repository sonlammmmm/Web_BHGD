@model Web_BHGD.Models.Category

@{
    ViewData["Title"] = "Xóa Danh mục #" + Model.Id;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Header -->
<div class="content-card">
    <div class="card-header">
        <h2 class="card-title">@ViewData["Title"]</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="card-body">
        <h3 class="text-danger">Bạn có chắc chắn muốn xóa danh mục này?</h3>
        <div class="row">
            <div class="col-md-6">
                <p><strong>Mã danh mục:</strong> @Model.Id</p>
                <p><strong>Tên danh mục:</strong> @Model.Name</p>
            </div>
        </div>
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Xóa
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times"></i> Hủy
            </a>
        </form>
    </div>
</div>