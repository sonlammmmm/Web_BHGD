@model Web_BHGD.Models.Category
@{
    ViewData["Title"] = "Cập nhật Danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container-fluid">
    <div class="row"> 
        <!-- Main Content -->
        <div class="col-md-9 col-lg-10">
            <div class="p-4">
                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                                <i class="fas fa-home me-1"></i>Dashboard
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-controller="Categories" asp-action="Index" class="text-decoration-none">
                                Danh mục
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Cập nhật</li>
                    </ol>
                </nav>

                <!-- Header -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h1 class="h3 mb-0">
                            <i class="fas fa-edit me-2 text-warning"></i>
                            Cập nhật Danh mục
                        </h1>
                        <p class="text-muted mb-0">Chỉnh sửa thông tin danh mục "#@Model.Id - @Model.Name"</p>
                    </div>
                </div>

                <!-- Form Card -->
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6">
                        <div class="card shadow-sm">
                            <div class="card-header bg-warning text-dark">
                                <h5 class="mb-0">
                                    <i class="fas fa-edit me-2"></i>
                                    Thông tin Danh mục
                                </h5>
                            </div>
                            <div class="card-body p-4">
                                <form asp-action="Update" method="post">
                                    <input type="hidden" asp-for="Id" />

                                    <div class="mb-3">
                                        <label class="form-label text-muted small">
                                            <i class="fas fa-hashtag me-1"></i>
                                            ID Danh mục
                                        </label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light">#</span>
                                            <input type="text" class="form-control bg-light" value="@Model.Id" readonly />
                                        </div>
                                    </div>

                                    <div class="mb-4">
                                        <label for="Name" class="form-label fw-bold">
                                            <i class="fas fa-tag me-1 text-primary"></i>
                                            Tên Danh mục <span class="text-danger">*</span>
                                        </label>
                                        <input asp-for="Name" class="form-control form-control-lg"
                                               placeholder="Nhập tên danh mục..."
                                               id="Name" autocomplete="off" />
                                        <span asp-validation-for="Name" class="text-danger small"></span>
                                        <div class="form-text">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Tên danh mục phải từ 2-50 ký tự
                                        </div>
                                    </div>

                                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-2">
                                            <i class="fas fa-arrow-left me-1"></i>
                                            Quay lại
                                        </a>
                                        <button type="submit" class="btn btn-warning btn-lg">
                                            <i class="fas fa-save me-1"></i>
                                            Cập nhật
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <!-- History Card -->
                        <div class="card mt-4 border-info">
                            <div class="card-header bg-light">
                                <h6 class="mb-0 text-info">
                                    <i class="fas fa-history me-1"></i>
                                    Thông tin Danh mục
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <small class="text-muted">ID:</small>
                                        <p class="mb-2"><strong>@Model.Id</strong></p>
                                    </div>
                                    <div class="col-md-6">
                                        <small class="text-muted">Tên hiện tại:</small>
                                        <p class="mb-2"><strong>@Model.Name</strong></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .nav-link {
        transition: all 0.3s ease;
        border-radius: 0.25rem;
        margin-bottom: 0.25rem;
    }

        .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.1);
            color: white !important;
        }

        .nav-link.active {
            background-color: rgba(255, 255, 255, 0.2);
            color: white !important;
        }

    .card {
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #ffc107;
        box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
    }

    .bg-dark {
        background-color: #2c3e50 !important;
    }

    .breadcrumb-item + .breadcrumb-item::before {
        content: "›";
        font-weight: bold;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Focus vào input tên
        const nameInput = document.getElementById('Name');
        if (nameInput) {
            nameInput.focus();
            // Select text for easy editing
            nameInput.select();
        }

        // Real-time validation
        nameInput.addEventListener('input', function() {
            const value = this.value.trim();
            const formText = this.nextElementSibling.nextElementSibling;

            if (value.length < 2) {
                formText.innerHTML = '<i class="fas fa-exclamation-triangle me-1"></i>Tên danh mục phải có ít nhất 2 ký tự';
                formText.className = 'form-text text-warning';
            } else if (value.length > 50) {
                formText.innerHTML = '<i class="fas fa-exclamation-triangle me-1"></i>Tên danh mục không được quá 50 ký tự';
                formText.className = 'form-text text-danger';
            } else {
                formText.innerHTML = '<i class="fas fa-check-circle me-1"></i>Tên danh mục hợp lệ';
                formText.className = 'form-text text-success';
            }
        });
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}