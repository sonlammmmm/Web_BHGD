@model Web_BHGD.Models.Category

@{
    ViewData["Title"] = "Cập nhật Danh mục #" + Model.Id;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Header -->
<div class="content-card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="card-title">@ViewData["Title"]</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="card-body">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="form-card p-4 shadow-sm rounded-3">
                    <form asp-action="Update" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-4 text-center">
                            <i class="fas fa-edit fa-3x text-primary mb-3"></i>
                            <h4 class="text-muted">Cập nhật thông tin danh mục</h4>
                        </div>
                        <div class="mb-4">
                            <label for="Name" class="form-label fw-bold">Tên danh mục</label>
                            <input asp-for="Name" class="form-control form-control-lg custom-input" required placeholder="Nhập tên danh mục" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 py-2 custom-btn">
                            <i class="fas fa-save"></i> Cập nhật
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}