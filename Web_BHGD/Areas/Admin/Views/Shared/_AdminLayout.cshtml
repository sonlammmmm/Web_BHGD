<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <main>
        <div class="container-fluid">
            <div class="row">
                <!-- Sidebar -->
                <div class="col-md-3 col-lg-2 px-0">
                    <div class="bg-dark min-vh-100">
                        <div class="p-3">
                            <h5 class="text-white mb-4">
                                <i class="fas fa-user-shield me-2"></i>
                                Admin Panel
                            </h5>

                            <nav class="nav flex-column">
                                <a class="nav-link text-white-50" asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-tachometer-alt me-2"></i>
                                    Dashboard
                                </a>

                                <hr class="text-white-50">

                                <h6 class="text-white-50 text-uppercase small mb-3">Quản lý</h6>

                                <a class="nav-link text-white-50" asp-controller="Product" asp-action="Index">
                                    <i class="fas fa-box me-2"></i>
                                    Sản phẩm
                                    <span class="badge bg-secondary ms-auto">Products</span>
                                </a>

                                <a class="nav-link text-white-50" asp-controller="Categories" asp-action="Index">
                                    <i class="fas fa-tags me-2"></i>
                                    Danh mục
                                    <span class="badge bg-secondary ms-auto">Categories</span>
                                </a>

                                <a class="nav-link text-white-50" asp-controller="Order" asp-action="Index">
                                    <i class="fas fa-shopping-cart me-2"></i>
                                    Đơn hàng
                                    <span class="badge bg-secondary ms-auto">Order</span>
                                </a>

                                <hr class="text-white-50">

                                <h6 class="text-white-50 text-uppercase small mb-3">Hệ thống</h6>

                                <a class="nav-link text-white-50" href="#" id="users-link">
                                    <i class="fas fa-users me-2"></i>
                                    Người dùng
                                    <small class="text-muted d-block">Sắp có</small>
                                </a>

                                <a class="nav-link text-white-50" href="#" id="reports-link">
                                    <i class="fas fa-chart-bar me-2"></i>
                                    Báo cáo
                                    <small class="text-muted d-block">Sắp có</small>
                                </a>
                            </nav>
                        </div>
                    </div>
                </div>

                <!-- Main Content -->
                <div class="col-md-9 col-lg-10">
                    @RenderBody()
                </div>
            </div>
        </div>
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row py-3">
                <div class="col-md-6">
                    © 2024 - Admin Panel - Privacy
                </div>
                <div class="col-md-6 text-md-end">
                    Powered by ASP.NET Core
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
</body>
</html>