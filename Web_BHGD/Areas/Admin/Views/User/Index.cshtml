@model List<Web_BHGD.Areas.Admin.Models.UserViewModel>
@{
    ViewData["Title"] = "Danh sách người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">Danh sách người dùng</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Họ tên</th>
            <th>Email</th>
            <th>SĐT</th>
            <th>Địa chỉ</th>
            <th>Tuổi</th>
            <th>Vai trò</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@user.Address</td>
                <td>@user.Age</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    @if (user.IsLocked)
                    {
                        <span class="text-danger fw-bold">Bị khóa</span>
                    }
                    else
                    {
                        <span class="text-success">Hoạt động</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info">Chi tiết</a>
                    @if (user.IsLocked)
                    {
                        <form asp-action="Unlock" asp-route-id="@user.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('Mở khóa tài khoản này?')">Mở khóa</button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="Lock" asp-route-id="@user.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-warning" onclick="return confirm('Khóa tài khoản này?')">Khóa</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
