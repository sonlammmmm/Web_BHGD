@model Web_BHGD.Areas.Admin.Models.UserViewModel

@{
    ViewData["Title"] = "Chi tiết Người dùng #" + Model.Id;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Header -->
<div class="content-card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="card-title">@ViewData["Title"]</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="card-body">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="form-card p-4 shadow-sm rounded-3">
                    <div class="mb-4 text-center">
                        <i class="fas fa-user fa-3x text-primary mb-3"></i>
                        <h4 class="text-muted">Thông tin người dùng</h4>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <p class="mb-1"><strong>ID:</strong> @Model.Id</p>
                            <p class="mb-1"><strong>Họ và tên:</strong> @Model.FullName</p>
                            <p class="mb-1"><strong>Email:</strong> @Model.Email</p>
                            <p class="mb-1"><strong>Số điện thoại:</strong> @(string.IsNullOrEmpty(Model.PhoneNumber) ? "Chưa cập nhật" : Model.PhoneNumber)</p>
                            <p class="mb-1"><strong>Địa chỉ:</strong> @(string.IsNullOrEmpty(Model.Address) ? "Chưa cập nhật" : Model.Address)</p>
                            <p class="mb-1"><strong>Tuổi:</strong> @(Model.Age.HasValue ? Model.Age.Value.ToString() : "Chưa cập nhật")</p>
                            <p class="mb-0"><strong>Vai trò:</strong> @string.Join(", ", Model.Roles)</p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-0">
                                <strong>Trạng thái:</strong>
                                <span class="badge @(!Model.IsLocked ? "bg-success" : "bg-danger")">
                                    @(!Model.IsLocked ? "Hoạt động" : "Bị khóa")
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>