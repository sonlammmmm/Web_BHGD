@model IEnumerable<Web_BHGD.Models.Product>
@{
    ViewData["Title"] = "Sản phẩm - BHGD Store";
}

<!-- Page Header -->
<section class="page-header bg-light py-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-2">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Sản phẩm</li>
                    </ol>
                </nav>
                <h1 class="h2 mb-0">
                    <i class="bi bi-grid-3x2-gap text-primary me-2"></i>
                    Tất cả sản phẩm
                </h1>
                <p class="text-muted mb-0">Khám phá bộ sưu tập đồ gia dụng đa dạng của chúng tôi</p>
            </div>
            @if (User.IsInRole("Admin"))
            {
                <div class="col-auto">
                    <a asp-action="Add" class="btn btn-success">
                        <i class="bi bi-plus-circle me-1"></i> Thêm sản phẩm
                    </a>
                </div>
            }
        </div>
    </div>
</section>

<!-- Filters & Search -->
<section class="filters-section py-4 bg-white border-bottom">
    <div class="container">
        <form method="get" id="filterForm">
            <div class="row align-items-end">
                <!-- Search -->
                <div class="col-lg-4 col-md-6 mb-3">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-search me-1"></i>Tìm kiếm
                    </label>
                    <input type="text" name="searchString" value="@ViewBag.CurrentFilter" 
                           class="form-control" placeholder="Nhập tên sản phẩm...">
                </div>

                <!-- Category Filter -->
                <div class="col-lg-3 col-md-6 mb-3">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-funnel me-1"></i>Danh mục
                    </label>
                    @Html.DropDownList("categoryId", ViewBag.Categories as SelectList, 
                        "-- Tất cả danh mục --", new { @class = "form-select" })
                </div>

                <!-- Filter Button -->
                <div class="col-lg-2 col-md-6 mb-3">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-funnel-fill me-1"></i>Lọc
                    </button>
                </div>
            </div>
        </form>

        <!-- Active Filters Display -->
        @if (!string.IsNullOrEmpty(ViewBag.CurrentFilter as string) || ViewBag.CurrentCategory != null)
        {
            <div class="active-filters mt-3">
                <span class="text-muted me-2">Bộ lọc đang áp dụng:</span>
                @if (!string.IsNullOrEmpty(ViewBag.CurrentFilter as string))
                {
                    <span class="badge bg-primary me-2">
                        Tìm kiếm: @ViewBag.CurrentFilter
                        <a asp-action="Index" class="text-white ms-1">×</a>
                    </span>
                }
                @if (ViewBag.CurrentCategory != null)
                {
                    <span class="badge bg-success me-2">
                        Danh mục đã chọn
                        <a asp-action="Index" class="text-white ms-1">×</a>
                    </span>
                }
            </div>
        }
    </div>
</section>

<!-- Products Grid -->
<section class="products-grid py-5">
    <div class="container">
        <!-- Results Info -->
        <div class="row mb-4">
            <div class="col">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <span class="text-muted">Hiển thị @Model.Count() sản phẩm</span>
                    </div>
                    <div class="view-toggle">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-sm btn-outline-secondary active" id="gridView">
                                <i class="bi bi-grid-3x3-gap"></i>
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-secondary" id="listView">
                                <i class="bi bi-list"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (Model.Any())
        {
            <!-- Products Grid View -->
            <div id="productsGrid" class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                        <div class="product-card">
                            <div class="card border-0 shadow-sm h-100">
                                <!-- Product Image -->
                                <div class="position-relative overflow-hidden">
                                    <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/images/no-image.jpg" : item.ImageUrl)" 
                                         class="card-img-top product-image" alt="@item.Name" 
                                         style="height: 220px; object-fit: cover; transition: transform 0.3s;">
                                    
                                    <!-- Quick Actions Overlay -->
                                    <div class="product-overlay position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center">
                                        <div class="btn-group">
                                            <a asp-action="Details" asp-route-id="@item.Id" 
                                               class="btn btn-light btn-sm" title="Xem chi tiết">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <a asp-action="Update" asp-route-id="@item.Id" 
                                                   class="btn btn-warning btn-sm" title="Chỉnh sửa">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" 
                                                   class="btn btn-danger btn-sm" title="Xóa"
                                                   onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?')">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            }
                                        </div>
                                    </div>

                                    <!-- Price Badge -->
                                    @if(item.Price < 500000)
                                    {
                                        <div class="position-absolute top-0 end-0 m-2">
                                            <span class="badge bg-success">Giá tốt</span>
                                        </div>
                                    }
                                </div>

                                <div class="card-body p-3">
                                    <h5 class="card-title text-truncate mb-2" title="@item.Name">
                                        <a asp-action="Details" asp-route-id="@item.Id" 
                                           class="text-decoration-none text-dark">@item.Name</a>
                                    </h5>
                                    
                                    <!-- Price -->
                                    <div class="price-section mb-3">
                                        <span class="h5 text-primary fw-bold">@item.Price.ToString("#,##0")₫</span>
                                    </div>

                                    <!-- Description -->
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <p class="card-text text-muted small text-truncate-2">
                                            @item.Description
                                        </p>
                                    }

                                    <!-- Rating -->
                                    <div class="rating mb-3">
                                        @for(int i = 0; i < 5; i++)
                                        {
                                            <i class="bi bi-star-fill text-warning small"></i>
                                        }
                                        <small class="text-muted ms-1">(4.8)</small>
                                    </div>

                                    <!-- Actions -->
                                    <div class="product-actions">
                                        @if(User.Identity.IsAuthenticated)
                                        {
                                            <form asp-controller="ShoppingCart" asp-action="AddToCart" method="post" class="d-inline w-100">
                                                <input type="hidden" name="productId" value="@item.Id" />
                                                <input type="hidden" name="quantity" value="1" />
                                                <button type="submit" class="btn btn-primary w-100" 
                                                        onclick="addToCartAnimation(this)">
                                                    <i class="bi bi-cart-plus me-1"></i> Thêm vào giỏ
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <a asp-area="Identity" asp-page="/Account/Login" 
                                               class="btn btn-outline-primary w-100">
                                                <i class="bi bi-box-arrow-in-right me-1"></i> Đăng nhập để mua
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Products List View (Hidden by default) -->
            <div id="productsList" class="d-none">
                @foreach (var item in Model)
                {
                    <div class="card mb-3 shadow-sm">
                        <div class="row g-0">
                            <div class="col-md-3">
                                <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/images/no-image.jpg" : item.ImageUrl)" 
                                     class="img-fluid rounded-start h-100" alt="@item.Name" 
                                     style="object-fit: cover; max-height: 200px;">
                            </div>
                            <div class="col-md-9">
                                <div class="card-body h-100 d-flex flex-column">
                                    <div class="row">
                                        <div class="col">
                                            <h5 class="card-title">
                                                <a asp-action="Details" asp-route-id="@item.Id" 
                                                   class="text-decoration-none">@item.Name</a>
                                            </h5>
                                            <p class="card-text">@item.Description</p>
                                            <div class="rating mb-2">
                                                @for(int i = 0; i < 5; i++)
                                                {
                                                    <i class="bi bi-star-fill text-warning"></i>
                                                }
                                                <small class="text-muted ms-2">(4.8/5 - 999+ đánh giá)</small>
                                            </div>
                                        </div>
                                        <div class="col-auto text-end">
                                            <div class="h4 text-primary fw-bold mb-3">@item.Price.ToString("#,##0")₫</div>
                                            @if(User.Identity.IsAuthenticated)
                                            {
                                                <form asp-controller="ShoppingCart" asp-action="AddToCart" method="post" class="d-inline">
                                                    <input type="hidden" name="productId" value="@item.Id" />
                                                    <input type="hidden" name="quantity" value="1" />
                                                    <button type="submit" class="btn btn-primary mb-2">
                                                        <i class="bi bi-cart-plus me-1"></i> Thêm vào giỏ
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <a asp-area="Identity" asp-page="/Account/Login" 
                                                   class="btn btn-outline-primary mb-2">
                                                    Đăng nhập để mua
                                                </a>
                                            }
                                            <div>
                                                <a asp-action="Details" asp-route-id="@item.Id" 
                                                   class="btn btn-outline-secondary btn-sm">
                                                    <i class="bi bi-eye me-1"></i> Chi tiết
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <!-- No Products Found -->
            <div class="text-center py-5">
                <div class="empty-state">
                    <i class="bi bi-box-seam display-1 text-muted mb-4"></i>
                    <h3 class="text-muted">Không tìm thấy sản phẩm</h3>
                    <p class="text-muted mb-4">
                        @if (!string.IsNullOrEmpty(ViewBag.CurrentFilter as string))
                        {
                            <span>Không có sản phẩm nào phù hợp với từ khóa "<strong>@ViewBag.CurrentFilter</strong>"</span>
                        }
                        else
                        {
                            <span>Hiện tại chưa có sản phẩm nào trong danh mục này.</span>
                        }
                    </p>
                    <div class="d-flex gap-2 justify-content-center">
                        <a asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-arrow-left me-1"></i> Xem tất cả sản phẩm
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                            <i class="bi bi-house me-1"></i> Về trang chủ
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
