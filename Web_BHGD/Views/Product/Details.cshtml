@model Web_BHGD.Models.Product
@{
    ViewData["Title"] = $"@Model.Name - BHGD Store";
}

<!-- Breadcrumb -->
<section class="bg-light py-3">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item"><a asp-controller="Product" asp-action="Index">Sản phẩm</a></li>
                <li class="breadcrumb-item active">@Model.Name</li>
            </ol>
        </nav>
    </div>
</section>

<!-- Product Details -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <!-- Product Image -->
            <div class="col-lg-6 mb-4">
                <div class="main-image bg-white shadow-sm rounded p-3">
                    <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/no-image.jpg" : Model.ImageUrl)"
                         class="img-fluid rounded" alt="@Model.Name"
                         style="width: 100%; height: 400px; object-fit: cover;" />
                </div>
            </div>
            <!-- Product Info -->
            <div class="col-lg-6">
                <h2 class="fw-bold mb-3">@Model.Name</h2>
                <div class="mb-3">
                    <span class="badge bg-primary">@(Model.Category?.Name ?? "Chưa phân loại")</span>
                </div>
                <div class="rating mb-3">
                    @for (int i = 0; i < 5; i++)
                    {
                        <i class="bi bi-star-fill text-warning me-1"></i>
                    }
                    <span class="text-muted ms-2">(1k+ đánh giá)</span>
                </div>
                <div class="price-section mb-4">
                    <span class="h3 text-danger fw-bold">@Model.Price.ToString("#,##0")₫</span>
                    @if (Model.Price > 200000)
                    {
                        <small class="text-muted text-decoration-line-through ms-2">
                            @((Model.Price * 1.2m).ToString("#,##0"))₫
                        </small>
                        <span class="badge bg-danger ms-2">Giảm 20%</span>
                    }
                </div>
                <div class="quantity-section mb-4">
                    <label class="form-label fw-semibold">Số lượng:</label>
                    <div class="input-group w-50">
                        <button class="btn btn-outline-secondary" type="button" onclick="decreaseQuantity()">
                            <i class="bi bi-dash"></i>
                        </button>
                        <input type="number" id="quantity" class="form-control text-center" value="1" min="1" max="99" />
                        <button class="btn btn-outline-secondary" type="button" onclick="increaseQuantity()">
                            <i class="bi bi-plus"></i>
                        </button>
                    </div>
                </div>
                <div class="d-flex gap-3 mb-4">
                    <button type="button" class="btn btn-danger flex-fill add-to-cart-btn"
                            data-product-id="@Model.Id" data-product-name="@Model.Name">
                        <i class="bi bi-cart-plus me-2"></i>Thêm vào giỏ
                    </button>
                    <button type="button" class="btn btn-success flex-fill buy-now-btn"
                            data-product-id="@Model.Id" data-product-name="@Model.Name">
                        <i class="bi bi-lightning me-2"></i>Mua ngay
                    </button>
                </div>
                <div class="additional-info border-top pt-3">
                    <div class="row text-center">
                        <div class="col-4">
                            <i class="bi bi-truck text-danger h4"></i>
                            <p class="small mb-0">Giao hàng miễn phí</p>
                        </div>
                        <div class="col-4">
                            <i class="bi bi-shield-check text-success h4"></i>
                            <p class="small mb-0">Bảo hành 12 tháng</p>
                        </div>
                        <div class="col-4">
                            <i class="bi bi-arrow-repeat text-primary h4"></i>
                            <p class="small mb-0">Đổi trả 7 ngày</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabs -->
        <div class="row mt-5">
            <div class="col-12">
                <ul class="nav nav-tabs" id="productTabs">
                    <li class="nav-item">
                        <button class="nav-link active" id="description-tab" data-bs-toggle="tab"
                                data-bs-target="#description">
                            Mô tả
                        </button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link" id="specifications-tab" data-bs-toggle="tab"
                                data-bs-target="#specifications">
                            Thông số
                        </button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link" id="reviews-tab" data-bs-toggle="tab"
                                data-bs-target="#reviews">
                            Đánh giá
                        </button>
                    </li>
                </ul>
                <div class="tab-content p-4 border rounded-bottom shadow-sm">
                    <div class="tab-pane fade show active" id="description">
                        <h5>Mô tả sản phẩm</h5>
                        <p>@(string.IsNullOrEmpty(Model.Description) ? "Chưa có mô tả." : Model.Description)</p>
                        <p>Sản phẩm chất lượng cao, thiết kế hiện đại, phù hợp với mọi gia đình.</p>
                    </div>
                    <div class="tab-pane fade" id="specifications">
                        <h5>Thông số kỹ thuật</h5>
                        <table class="table">
                            <tr><th>Tên sản phẩm</th><td>@Model.Name</td></tr>
                            <tr><th>Danh mục</th><td>@(Model.Category?.Name ?? "Chưa phân loại")</td></tr>
                            <tr><th>Giá</th><td>@Model.Price.ToString("#,##0")₫</td></tr>
                            <tr><th>Bảo hành</th><td>12 tháng</td></tr>
                        </table>
                    </div>
                    <div class="tab-pane fade" id="reviews">
                        <h5>Đánh giá khách hàng</h5>
                        <div class="text-center mb-4">
                            <h3 class="text-warning">4.8</h3>
                            <div>@for (int i = 0; i < 5; i++)
                                {
                                    <i class="bi bi-star-fill text-warning"></i>
                                }</div>
                            <p class="text-muted">1k+ đánh giá</p>
                        </div>
                        <div class="p-3 bg-light rounded mb-3">
                            <p><strong>Nguyễn Văn A</strong> - 5 sao - Sản phẩm tuyệt vời, giao hàng nhanh!</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Related Products -->
        @if (ViewBag.RelatedProducts != null && ((List<Web_BHGD.Models.Product>)ViewBag.RelatedProducts).Any())
        {
            <div class="row mt-5">
                <div class="col-12">
                    <h4 class="fw-bold mb-4">Sản phẩm liên quan</h4>
                    <div class="row">
                        @foreach (var related in (List<Web_BHGD.Models.Product>)ViewBag.RelatedProducts)
                        {
                            <div class="col-lg-3 col-md-6 mb-4">
                                <div class="product-card bg-white shadow-sm rounded">
                                    <a asp-controller="Product" asp-action="Details" asp-route-id="@related.Id">
                                        <img src="@(string.IsNullOrEmpty(related.ImageUrl) ? "/images/no-image.jpg" : related.ImageUrl)"
                                             class="card-img-top rounded-top" alt="@related.Name"
                                             style="height: 180px; object-fit: cover;" />
                                    </a>
                                    <div class="p-3">
                                        <a asp-controller="Product" asp-action="Details" asp-route-id="@related.Id" class="text-dark">
                                            <h6 class="text-truncate fw-bold">@related.Name</h6>
                                        </a>
                                        <div class="mb-2">
                                            <span class="text-danger fw-bold">@related.Price.ToString("#,##0")₫</span>
                                        </div>
                                        <button type="button" class="btn btn-danger btn-sm w-100 add-to-cart-btn"
                                                data-product-id="@related.Id" data-product-name="@related.Name">
                                            <i class="bi bi-cart-plus me-1"></i>Thêm vào giỏ
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<style>
    .main-image img {
        transition: transform 0.3s ease;
    }

    .main-image:hover img {
        transform: scale(1.05);
    }

    .nav-tabs .nav-link {
        color: #212529;
        font-weight: 500;
    }

        .nav-tabs .nav-link.active {
            color: #dc3545;
            border-bottom-color: #dc3545;
        }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            updateCartCount();

            // Add to cart
            $('.add-to-cart-btn').click(function () {
                var btn = $(this);
                var productId = btn.data('product-id');
                var productName = btn.data('product-name');
                var quantity = parseInt($('#quantity').val()) || 1;
                if (quantity < 1 || quantity > 99) {
                    showToast('error', 'Số lượng phải từ 1 đến 99.');
                    return;
                }
                btn.prop('disabled', true).html('<i class="bi bi-arrow-repeat spinner-border spinner-border-sm me-1"></i> Đang thêm...');
                $.ajax({
                    url: '@Url.Action("AddToCart", "ShoppingCart")',
                    type: 'POST',
                    data: {
                        productId: productId,
                        quantity: quantity,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function () {
                        showToast('success', `Đã thêm ${productName} vào giỏ hàng.`);
                        updateCartCount();
                        btn.prop('disabled', false).html('<i class="bi bi-cart-plus me-1"></i>Thêm vào giỏ');
                    },
                    error: function () {
                        showToast('error', 'Lỗi khi thêm sản phẩm vào giỏ hàng.');
                        btn.prop('disabled', false).html('<i class="bi bi-cart-plus me-1"></i>Thêm vào giỏ');
                    }
                });
            });

            // Buy now
            $('.buy-now-btn').click(function () {
                var btn = $(this);
                var productId = btn.data('product-id');
                var productName = btn.data('product-name');
                var quantity = parseInt($('#quantity').val()) || 1;
                if (quantity < 1 || quantity > 99) {
                    showToast('error', 'Số lượng phải từ 1 đến 99.');
                    return;
                }
                btn.prop('disabled', true).html('<i class="bi bi-arrow-repeat spinner-border spinner-border-sm me-1"></i> Đang xử lý...');
                $.ajax({
                    url: '@Url.Action("AddToCart", "ShoppingCart")',
                    type: 'POST',
                    data: {
                        productId: productId,
                        quantity: quantity,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function () {
                        window.location.href = '@Url.Action("Checkout", "ShoppingCart")';
                    },
                    error: function () {
                        showToast('error', 'Lỗi khi xử lý. Vui lòng thử lại.');
                        btn.prop('disabled', false).html('<i class="bi bi-lightning me-2"></i>Mua ngay');
                    }
                });
            });
        });

        function increaseQuantity() {
            var qty = parseInt($('#quantity').val());
            if (qty < 99) $('#quantity').val(qty + 1);
        }

        function decreaseQuantity() {
            var qty = parseInt($('#quantity').val());
            if (qty > 1) $('#quantity').val(qty - 1);
        }

        function showToast(type, message) {
            var toastClass = type === 'success' ? 'alert-success' : 'alert-danger';
            var icon = type === 'success' ? 'bi-check-circle' : 'bi-exclamation-triangle';
            var toast = `<div class="alert ${toastClass} alert-dismissible fade show position-fixed"
                                    style="top: 20px; right: 20px; z-index: 9999; min-width: 300px;" role="alert">
                                    <i class="bi ${icon} me-2"></i>${message}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                 </div>`;
            $('body').append(toast);
            setTimeout(function () {
                $('.alert').alert('close');
            }, 3000);
        }

        function updateCartCount() {
            $.get('@Url.Action("GetCartItemCount", "ShoppingCart")', function (data) {
                $('.cart-count').text(data.count);
            });
        }
    </script>
}