@{
    ViewData["Title"] = "Đặt hàng thành công";
    var orderId = Model;
}

<!-- Breadcrumb -->
<section class="bg-light py-3">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-primary">Trang chủ</a></li>
                <li class="breadcrumb-item"><a asp-controller="ShoppingCart" asp-action="Index" class="text-primary">Giỏ hàng</a></li>
                <li class="breadcrumb-item active" aria-current="page">Đặt hàng thành công</li>
            </ol>
        </nav>
    </div>
</section>

<!-- Nội dung chính -->
<section class="py-5 text-center">
    <div class="container">
        <div class="card shadow-sm mx-auto" style="max-width: 600px;">
            <div class="card-body">
                <h2 class="fw-bold mb-4">Đặt hàng thành công!</h2>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }

                <p class="text-dark">Cảm ơn bạn đã đặt hàng! Mã đơn hàng của bạn là <strong>#@orderId</strong>.</p>
                <p class="text-dark">Đơn hàng của bạn đang chờ xác nhận từ quản trị viên. Chúng tôi sẽ liên hệ với bạn sớm qua email hoặc số điện thoại.</p>
                <a asp-action="Index" asp-controller="Home" class="btn btn-primary mt-3">Tiếp tục mua sắm</a>
            </div>
        </div>
    </div>
</section>