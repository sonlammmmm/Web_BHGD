<div class="modal fade" id="qrPaymentModal" tabindex="-1" aria-labelledby="qrPaymentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <div class="payment-logo">
                    <img id="payment-logo" src="" alt="Payment Logo" class="logo-img" />
                </div>
                <h5 class="modal-title" id="qrPaymentModalLabel">Thanh toán bằng mã QR</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="payment-header">
                    <div class="qr-amount-container">
                        <div class="qr-container">
                            <img id="qr-code-image" src="" alt="QR Code" class="qr-code-img" />
                        </div>
                        <div class="amount-display" id="amount-display"></div>
                    </div>
                </div>
                <div class="payment-instructions">
                    <p class="instruction-text">Vui lòng quét mã QR bằng ứng dụng ngân hàng để thanh toán.</p>
                </div>
                <div class="payment-details">
                    <div class="detail-item">
                        <label>Số tài khoản:</label>
                        <span id="account-number"></span>
                        <button class="copy-btn" onclick="copyToClipboard('account-number')">
                            <i class="bi bi-copy"></i>
                        </button>
                    </div>
                    <div class="detail-item">
                        <label>Tên tài khoản:</label>
                        <span id="account-name"></span>
                    </div>
                    <div class="detail-item">
                        <label>Ngân hàng:</label>
                        <span id="bank-name"></span>
                    </div>
                </div>
                <div class="payment-status">
                    <div class="status-indicator">
                        <div class="status-dot"></div>
                        <span class="status-text">Đang chờ thanh toán</span>
                    </div>
                    <div class="timer-container">
                        <span class="countdown-timer"></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary complete-payment">Xác nhận thanh toán</button>
            </div>
        </div>
    </div>
</div>

<script>
    function copyToClipboard(elementId) {
        const element = document.getElementById(elementId);
        const text = element.innerText;
        navigator.clipboard.writeText(text).then(() => {
            const toast = document.createElement('div');
            toast.className = 'copy-toast';
            toast.innerHTML = `<i class="bi bi-check-circle me-2"></i>Đã sao chép: ${text}`;
            document.body.appendChild(toast);
            setTimeout(() => toast.remove(), 3000);
        }).catch(() => {
            alert('Không thể sao chép, vui lòng thử lại.');
        });
    }
</script>