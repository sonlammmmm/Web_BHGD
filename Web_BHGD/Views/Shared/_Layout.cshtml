<!-- _Layout.cshtml -->
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BHGD Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/_Layout.cshtml.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <!-- Header -->
    <header class="bg-white shadow-sm">
        <div class="container py-2">
            <div class="row align-items-center">
                <!-- Logo -->
                <div class="col-3">
                    <a asp-controller="Home" asp-action="Index" class="navbar-brand fw-bold fs-4 text-danger">
                        BHGD Store
                    </a>
                </div>
                <!-- Search Bar -->
                <div class="col-6">
                    <form asp-controller="Home" asp-action="QuickSearch" method="post" class="d-flex">
                        <div class="input-group">
                            <input type="text" name="searchTerm" class="form-control" placeholder="Tìm kiếm sản phẩm..." />
                            <button class="btn btn-danger" type="submit"><i class="bi bi-search"></i></button>
                        </div>
                    </form>
                </div>
                <!-- User and Cart -->
                <div class="col-3 d-flex justify-content-end align-items-center">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="dropdown me-3">
                            <a class="dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-1"></i>@User.Identity.Name
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout">Đăng xuất</a></li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a asp-area="Identity" asp-page="/Account/Login" class="text-dark me-3">
                            <i class="bi bi-person-circle me-1"></i>Đăng nhập
                        </a>
                    }
                    <a asp-controller="ShoppingCart" asp-action="Index" class="text-dark position-relative">
                        <i class="bi bi-cart3 fs-5"></i>
                        <span class="cart-count badge bg-danger rounded-circle position-absolute top-0 start-100 translate-middle">0</span>
                    </a>
                </div>
            </div>
        </div>
        <!-- Navigation -->
        <nav class="navbar navbar-expand-lg bg-danger">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Category" asp-action="Index">Danh mục</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Product" asp-action="Index">Sản phẩm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="About">Giới thiệu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Contact">Liên hệ</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer bg-dark text-white py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5 class="fw-bold">BHGD Store</h5>
                    <p>Chuyên cung cấp đồ gia dụng chất lượng cao, giá hợp lý, mang lại không gian sống tiện nghi.</p>
                </div>
                <div class="col-md-2">
                    <h5 class="fw-bold">Liên kết</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Index" class="text-white">Trang chủ</a></li>
                        <li><a asp-controller="Product" asp-action="Index" class="text-white">Sản phẩm</a></li>
                        <li><a asp-controller="Category" asp-action="Index" class="text-white">Danh mục</a></li>
                        <li><a asp-controller="Home" asp-action="About" class="text-white">Giới thiệu</a></li>
                        <li><a asp-controller="Home" asp-action="Contact" class="text-white">Liên hệ</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5 class="fw-bold">Hỗ trợ khách hàng</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white">Chính sách đổi trả</a></li>
                        <li><a href="#" class="text-white">Chính sách bảo hành</a></li>
                        <li><a href="#" class="text-white">Hướng dẫn mua hàng</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5 class="fw-bold">Thông tin liên hệ</h5>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-geo-alt me-2"></i>123 Đường ABC, Quận 1, TP.HCM</li>
                        <li><i class="bi bi-telephone me-2"></i>1900-1000</li>
                        <li><i class="bi bi-envelope me-2"></i>info@bhgdstore.com</li>
                    </ul>
                </div>
            </div>
            <div class="text-center mt-3 border-top pt-3">
                <p class="mb-0">&copy; 2025 BHGD Store. All rights reserved.</p>
            </div>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>