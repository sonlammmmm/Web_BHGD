@model IEnumerable<Web_BHGD.Models.Product>
@{
    ViewData["Title"] = "BHGD Store - Đồ Gia Dụng Chất Lượng";
}

<!-- Hero Section -->
<section class="hero-section py-4" style="background: linear-gradient(135deg, #dc3545 0%, #ffcc00 100%);">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 text-white">
                <h1 class="fw-bold mb-3 fs-3">Gia Dụng Việt - Chất Lượng Đỉnh Cao</h1>
                <p class="lead mb-3">Mang đến không gian sống tiện nghi, đậm chất Việt với sản phẩm bền đẹp, giá tốt.</p>
                <div class="d-flex gap-2">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-dark btn-sm px-3">
                        <i class="bi bi-cart-check me-1"></i>Mua Sắm Ngay
                    </a>
                    <a href="#featured-products" class="btn btn-outline-light btn-sm px-3">
                        <i class="bi bi-arrow-down-circle me-1"></i>Khám Phá
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <img src="/images/banner_bhgd.png" alt="Gia dụng Việt" class="img-fluid" style="max-height: 300px; border: 3px solid #fff;">
            </div>
        </div>
    </div>
</section>

<!-- Main Content with Sidebar -->
<section class="main-content py-4 bg-light">
    <div class="container">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-lg-2 col-md-3 mb-4">
                <div class="sidebar sticky-top" style="top: 20px;">
                    <partial name="_CategoryMenu" model="ViewBag.Categories" />
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-lg-10 col-md-9">
                <!-- Quick Search -->
                <section class="search-section py-3 bg-dark text-white mb-3">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-8">
                                <form asp-action="QuickSearch" method="post" class="d-flex">
                                    <div class="input-group">
                                        <span class="input-group-text bg-danger text-white">
                                            <i class="bi bi-search"></i>
                                        </span>
                                        <input type="text" name="searchTerm" class="form-control" placeholder="Tìm nồi chiên, máy xay, chảo chống dính...">
                                        <button class="btn btn-danger px-3" type="submit">Tìm Ngay</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Featured Products -->
                <section id="featured-products" class="products-section">
                    <div class="row align-items-center mb-3">
                        <div class="col">
                            <h2 class="fw-bold mb-0 fs-5">
                                <i class="bi bi-fire text-danger me-2"></i>Sản Phẩm Nổi Bật
                            </h2>
                            <p class="text-muted mb-0">Những sản phẩm đang được yêu thích nhất tại BHGD Store</p>
                        </div>
                        <div class="col-auto">
                            <a asp-controller="Product" asp-action="Index" class="btn btn-danger btn-sm">
                                Xem Tất Cả <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        @foreach (var item in Model.Take(8))
                        {
                            <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
                                <div class="product-card bg-white" style="border: 2px solid #000;">
                                    <div class="position-relative overflow-hidden">
                                        <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/images/no-image.jpg" : item.ImageUrl)"
                                             class="card-img-top" alt="@item.Name" style="height: 180px; object-fit: cover;">
                                        @if (item.Price < 500000)
                                        {
                                            <span class="badge bg-danger position-absolute top-0 start-0 m-2">Giá Sốc</span>
                                        }
                                    </div>
                                    <div class="p-2">
                                        <h6 class="text-truncate fw-bold" title="@item.Name">@item.Name</h6>
                                        <div class="price-section mb-2">
                                            <span class="h6 text-danger fw-bold">@item.Price.ToString("#,##0")₫</span>
                                            @if (item.Price > 200000)
                                            {
                                                <small class="text-muted text-decoration-line-through ms-2">
                                                    @((item.Price * 1.2m).ToString("#,##0"))₫
                                                </small>
                                            }
                                        </div>
                                        <div class="rating mb-2">
                                            @for (int i = 0; i < 5; i++)
                                            {
                                                <i class="bi bi-star-fill text-warning" style="font-size: 12px;"></i>
                                            }
                                            <small class="text-muted ms-1">(1k+)</small>
                                        </div>
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <form asp-controller="ShoppingCart" asp-action="AddToCart" method="post" class="d-inline">
                                                <input type="hidden" name="productId" value="@item.Id" />
                                                <input type="hidden" name="quantity" value="1" />
                                                <button type="submit" class="btn btn-danger btn-sm w-100">
                                                    <i class="bi bi-cart-plus me-1"></i>Thêm Vào Giỏ
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-danger btn-sm w-100">
                                                <i class="bi bi-box-arrow-in-right me-1"></i>Đăng Nhập Để Mua
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>

<!-- Newsletter Section -->
<section class="newsletter-section py-4 bg-danger text-white">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h3 class="fw-bold fs-5"><i class="bi bi-envelope-fill me-2"></i>Đăng Ký Nhận Khuyến Mãi</h3>
                <p class="mb-0">Cập nhật ngay những ưu đãi hấp dẫn và sản phẩm mới từ BHGD Store!</p>
            </div>
            <div class="col-lg-6">
                <div class="input-group">
                    <input type="email" class="form-control" placeholder="Nhập email của bạn...">
                    <button class="btn btn-dark" type="button">
                        <i class="bi bi-send-fill me-1"></i>Đăng Ký
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .product-card {
        transition: transform 0.2s ease;
        border-radius: 8px;
        overflow: hidden;
    }

    .product-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .product-card h6 {
        font-size: 14px;
        min-height: 40px;
    }

    .price-section {
        font-size: 14px;
    }
</style>